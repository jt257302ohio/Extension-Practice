{
    "name": "MEXTENSION App",
    "description": "EXTENSION Application",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
      "storage",
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "scripts": ["EXTENSION.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
